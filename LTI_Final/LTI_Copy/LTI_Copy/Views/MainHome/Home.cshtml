@{
    ViewBag.Title = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - LTI Insurance System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .carousel-caption h5, .carousel-caption p {
            color: #fff;
        }
    </style>
</head>
<body>

    <!-- 🔷 Header & Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="#">LTI Insurance</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#ltiNavbar" aria-controls="ltiNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="ltiNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Home", "MainHome")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("UserLogin", "Account")">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("UserRegister", "Account")">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "MainHome")">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "MainHome")">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Help", "MainHome")">Help</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("FAQ", "MainHome")">FAQ</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>

    <!-- Branding Section with Logo -->
    <div class="text-center my-5">
        <div class="d-flex justify-content-center align-items-center gap-3 flex-wrap">
            <img src="@Url.Content("~/Images/logo.jpg")" alt="LTI Logo" style="height:80px; width:auto;" />
            <h1 class="display-4 fw-bold text-dark m-0">LTI Insurance System</h1>
        </div>
        <p class="lead text-muted mt-3">No agents. No paperwork. Just smart, secure insurance at your fingertips.</p>
    </div>


    <!-- Carousel Section -->
    <div id="ltiCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Url.Content("~/Images/img1.jpg")" class="d-block w-100" style="height:450px; object-fit:cover;" alt="Digital Insurance" />
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h5>Digital Insurance Made Simple</h5>
                    <p>Buy, renew, and claim policies online with zero hassle.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/Images/img2.jpg")" class="d-block w-100" style="height:450px; object-fit:cover;" alt="Secure Insurance" />
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h5>Secure & Transparent</h5>
                    <p>Every transaction is logged and traceable for peace of mind.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/Images/img3.jpg")" class="d-block w-100" style="height:450px; object-fit:cover;" alt="Customer Focus" />
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h5>Customer First</h5>
                    <p>Designed for users, clients, and admins to work in harmony.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#ltiCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#ltiCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- Get Started Block -->
    <div class="text-center mb-5">
        <div class="card mx-auto p-5 shadow-lg" style="max-width: 600px; border-radius: 20px;">
            <h2 class="mb-3">Ready to Get Started?</h2>
            <p class="mb-4">Access your portal to manage policies, documents, and analytics — all in one place.</p>
            <a href="@Url.Action("UserLogin", "Account")" class="btn btn-lg btn-primary px-5">Get Started</a>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">© 2025 LTI Insurance System. All rights reserved.</p>
        <small>Built for smarter insurance management.</small>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
