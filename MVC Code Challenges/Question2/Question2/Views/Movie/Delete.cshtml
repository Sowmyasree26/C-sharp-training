@model Question2.Models.Movies

@{
    ViewBag.Title = "Delete Movie";
}

<h2>Delete Movie</h2>

<h3>Are you sure you want to delete this movie?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>Movie Name</dt>
        <dd>@Model.Moviename</dd>

        <dt>Director</dt>
        <dd>@Model.DirectorName</dd>

        <dt>Release Date</dt>
        <dd>@Model.DateofRelease.ToShortDateString()</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Movie", new { id = Model.Mid }, FormMethod.Post))
    {
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>
