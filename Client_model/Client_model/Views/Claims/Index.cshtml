@model IEnumerable<dynamic>
@{ ViewBag.Title = "Claims"; }
<div class="card card-soft">
    <div class="card-body">
        <h5 class="mb-3"><i class="bi bi-clipboard2-pulse me-2"></i>Claims</h5>
        <table class="table table-hover">
            <thead><tr><th>Policy</th><th>Holder</th><th>Type</th><th>Amount</th><th>Status</th><th>Date</th></tr></thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Policy</td>
                        <td>@c.Holder</td>
                        <td>@c.ClaimType</td>
                        <td>₹@((decimal)c.ClaimedAmount).ToString("N2")</td>
                        <td>@c.Status</td>
                        <td>@((System.DateTime)c.ClaimDate).ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
