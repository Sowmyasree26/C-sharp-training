@model IEnumerable<dynamic>
@{ ViewBag.Title = "User Approvals"; }
<div class="card card-soft">
    <div class="card-body">
        <h5 class="mb-3"><i class="bi bi-patch-question me-2"></i>Pending User Approvals</h5>
        <table class="table table-hover">
            <thead><tr><th>Holder</th><th>Policy</th><th>Status</th><th>Payment</th><th>Start</th><th>End</th></tr></thead>
            <tbody>
                @foreach (var up in Model)
                {
                    <tr>
                        <td>@up.Holder</td>
                        <td>@up.Policy</td>
                        <td>@up.Status</td>
                        <td>@up.PaymentStatus</td>
                        <td>@((System.DateTime)up.StartDate).ToString("yyyy-MM-dd")</td>
                        <td>@((System.DateTime)up.EndDate).ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
